<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="layout_generate_blocks_after">
        <observer name="sirio_layout_render_before" instance="Chiron\Sirio\Observer\AddJavascriptBlock" />
    </event>
    <!--  Cart events  -->
    
   <event name="sales_quote_item_qty_set_after">
        <observer name="sirio_quote_item_qty_set_after" instance="Chiron\Sirio\Observer\CartTrack" />
    </event>
    
    <event name="checkout_cart_product_add_after">
        <observer name="sirio_cart_product_add_after" instance="Chiron\Sirio\Observer\CartTrack" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="sirio_quote_remove_item" instance="Chiron\Sirio\Observer\CartTrack" />
    </event>

</config>
